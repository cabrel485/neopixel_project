#!/bin/bash
realpath=`readlink -fn $0`
realdir=`dirname $realpath`
export PERL5LIB=$PERL5LIB:$realdir/../../../usr/lib/perl-native/perl/site_perl/5.24.4:$realdir/../../../usr/lib/perl-native/perl/vendor_perl/5.24.4:$realdir/../../../usr/lib/perl-native/perl/5.24.4
exec -a `dirname $realpath`/perl `dirname $realpath`/perl.real "$@"
